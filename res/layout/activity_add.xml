<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#EAEAEA" >

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/etWhat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:hint="What"
            android:textColor="#006699"
            android:textSize="24sp"
            bootstrapbutton:be_roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/etWhy"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/etWhat"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:hint="Why"
            android:textColor="#993300"
            android:textSize="18sp"
            bootstrapbutton:be_roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/etWhere"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/etWhy"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:hint="Where"
            android:textColor="#009900"
            android:textSize="18sp"
            bootstrapbutton:be_roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/etWhen"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/etWhere"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:hint="When"
            android:textColor="#CC9933"
            android:textSize="18sp"
            bootstrapbutton:be_roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/etWho"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/etWhen"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:hint="Who"
            android:textColor="#333333"
            android:textSize="18sp"
            bootstrapbutton:be_roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/etHow"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/etWho"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:hint="How"
            android:textColor="#999999"
            android:textSize="18sp"
            bootstrapbutton:be_roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/etHowMuch"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/etHow"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:hint="How Much"
            android:textColor="#990066"
            android:textSize="18sp"
            bootstrapbutton:be_roundedCorners="true" />

        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etHowMuch"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_add"
            android:src="@drawable/selector_add" />
    </RelativeLayout>

</ScrollView>